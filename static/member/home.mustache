    <style>
        .preview-images img {
            width: 100%
        }
    </style>
</head>
<body class="bg-dark">      
        {{>menu}}
        
        <div class="container-sm" style="height: 100% ;padding-top: 14px; justify-content: center; margin-top: 50px;"> 
                    {{! at post }}
                    {{>accout}}
                    {{! content }}
                    {{>posts}}
        </div> 

        {{>footer}}

    {{>jquery}}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/mustache.js/4.2.0/mustache.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script>
             var settingsmenu = document.querySelector(".settings-menu");
            var darkBtn = document.getElementById("dark-btn");
            function settingMenuToggle(){
                settingsmenu.classList.toggle("settings-menu-height")
            }


            darkBtn.onclick = function(){
                darkBtn.classList.toggle("dark-btn-on");
                document.body.classList.toggle("dark-theme");
            }
            
            function submitPost() {
            var pdfFileInput = document.getElementById('pdf-upload');
            var jpgFileInput = document.getElementById('jpg-upload');    
                if (pdfFileInput.files.length > 0 || jpgFileInput.files.length > 0) {
                    console.log('Post submitted successfully!');
                } else {
                    alert('Please select at least one file to post.');
                }
            }
    </script>
</body>
</html>